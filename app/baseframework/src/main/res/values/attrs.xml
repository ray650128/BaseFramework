<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--DrawableTextView -->
    <declare-styleable name="DrawableTextView">
        <attr name="leftDrawable" format="reference|integer" />
        <attr name="rightDrawable" format="reference|integer" />
        <attr name="topDrawable" format="reference|integer" />
        <attr name="bottomDrawable" format="reference|integer" />
        <attr name="drawableWidth" format="dimension" />
        <attr name="drawableHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RadiusImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_radius" format="dimension" />
        <attr name="drawable_radius" format="dimension" />
    </declare-styleable>
</resources>